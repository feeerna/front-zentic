{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noImplicitAny": true, // Bloquea variables sin tipo
    "noImplicitThis": true, // Evita el uso incorrecto de "this"
    "noUnusedLocals": true, // No permite variables no usadas
    "strictNullChecks": true, // Evita valores nulos inesperados
    "noUnusedParameters": true, // No permite par√°metros no usados
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "src/**/*.json", "src/vue-shim.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
